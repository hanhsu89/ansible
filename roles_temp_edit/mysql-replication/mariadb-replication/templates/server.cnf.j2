[server]

[mysqld]

[embedded]

[mariadb]

[mariadb-10.1]
### replication ###
gtid_domain_id=1
server-id = {{ server_id }}
binlog_format=ROW
log_slave_updates=1
log_bin=/data/log/mysql/mysql-bin.log
log_bin_index=/data/log/mysql/mysql-bin.log.index
expire_logs_days=7
max_binlog_size=300M
## basic ###
bind-address = {{ ansible_host }}
user=mysql
datadir=/data/lib/mysql
log_error=/data/log/mysqld/mysql_error.log
socket=/var/lib/mysql/mysql.sock
port=3306
default_storage_engine=InnoDB
binlog_format=ROW
sync_binlog=0
skip_name_resolve=1
log_output=FILE
max_allowed_packet=64M
report_host = {{ ansible_host }}
{% if inventory_hostname in groups['databases'][0] %}
read_only = 0
skip_slave_start=0
{% else %}
read_only = 1
skip_slave_start = 1 
{% endif %}


## innodb ###
innodb_buffer_pool_size = 11469M
innodb_buffer_pool_instances = 8
innodb_file_per_table = 1 # Is the recommended way nowadays 
innodb_io_capacity = 800
innodb_flush_method=O_DIRECT
innodb_flush_log_at_trx_commit=2
innodb_autoinc_lock_mode=2
innodb_doublewrite=1
sync_binlog=0
innodb_log_buffer_size= 32M
innodb_open_files = 1000
innodb_thread_concurrency = 50
innodb_old_blocks_time=1000

query_cache_size        = 0
query_cache_type        = 0
### table open cache ###
table_open_cache=1000

### thread and connection ###
thread_stack            = 256K
thread_cache_size       = 8
max_connections         = 512

### timeout ###
wait_timeout=30 ### TBD

interactive_timeout=300
### for long query, these params should be increased
connect_timeout=600
net_read_timeout=600
net_write_timeout=600

### temporary tables ###
tmp_table_size=128M
max_heap_table_size=128M
tmpdir=/data/log/mysqld/tmpdir
### slow query ###
slow_query_log=1
log_queries_not_using_indexes=0
log_warnings=1
long_query_time = 2
slow_query_log_file = /data/log/mysqld/mysql_slow.log

### general log ###
# for debugging
general_log=0
general_log_file=/data/log/mysql/mysql_general.log

### redo log ###
innodb_log_files_in_group=2
innodb_log_file_size=512M


[xtrabackup]
datadir = /data/lib/mysql
socket = /data/lib/mysql/mysql.sock
streamfmt = xbstream
